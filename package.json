{
  "name": "raisin-cookie",
  "version": "0.0.1",
  "description": "a strict mock api for local development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "keywords": [
    "test",
    "api"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "export TS_NODE_CACHE='false'; ts-node src/index.ts",
    "build": "rm -rf dist && tsc",
    "lint": "tslint  --project . --format verbose --fix -c tslint.json",
    "test": "export TS_NODE_CACHE='false' && nyc _mocha --opts mocha.opts",
    "test:watch": "TS_NODE_CACHE='false' mocha -w --opts mocha.opts"
  },
  "author": "Arijus Gilbrantas",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/arijusg/raisin-cookie.git",
    "type": "git"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "4.2.0",
    "@types/mocha": "5.2.7",
    "@types/node": "12.7.2",
    "@types/sinon": "^7.0.13",
    "chai": "4.2.0",
    "mocha": "6.2.0",
    "nyc": "14.1.1",
    "sinon": "^7.4.1",
    "ts-node": "8.3.0",
    "tslint": "5.19.0",
    "typescript": "3.5.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "all": true
  }
}
